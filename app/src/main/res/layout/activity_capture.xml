<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/flash"
            android:tint="@color/colorAccent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/capture_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/btn_transform"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_tranform_size"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/camera_transform"
            android:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/capture"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_capture_size"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/btn_capture" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>

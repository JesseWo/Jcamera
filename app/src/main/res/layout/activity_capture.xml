<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/capture_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/btn_transform"
        android:layout_width="@dimen/btn_tranform_size"
        android:layout_height="@dimen/btn_tranform_size"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/btn_margin"
        android:layout_marginLeft="@dimen/btn_margin"
        android:background="@mipmap/camera_transform" />

    <Button
        android:id="@+id/capture"
        android:layout_width="@dimen/btn_capture_size"
        android:layout_height="@dimen/btn_capture_size"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/btn_margin"
        android:background="@drawable/btn_capture" />

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="@dimen/btn_margin" />

</FrameLayout>
